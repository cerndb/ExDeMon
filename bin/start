# Reference: http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

HOME=$SCRIPT_DIR/..

source $HOME/conf/env

SPARK_CMD=spark-submit
if [ ! -z "${SPARK_HOME}" ]; then
	SPARK_CMD=$SPARK_HOME/bin/$SPARK_CMD
fi

SPARK_VERSION=`$SPARK_CMD --version |& grep version | grep -o '[^ ]*$'`
	
$SPARK_CMD \
		--master yarn \
		--deploy-mode cluster \
		--driver-cores 2 \
		--driver-memory 4G \
		--executor-memory 2G \
		--executor-cores 1 \
		--class ch.cern.spark.metrics.Driver \
		--packages org.apache.spark:spark-streaming-kafka-0-10_2.11:$SPARK_VERSION,org.reflections:reflections:0.9.9,org.apache.curator:curator-recipes:4.0.1 \
		--jars $HOME/lib/*.jar \
		--files "$HOME/conf/exdemon.properties,$HOME/conf/log4j.properties,$SPARK_SUBMIT_FILES" \
		$HOME/target/exdemon-*.jar \
		exdemon.properties
